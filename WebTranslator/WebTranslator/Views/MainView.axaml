<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="WebTranslator.Views.MainView"
             xmlns:vm="clr-namespace:WebTranslator.ViewModels"
             x:DataType="vm:MainViewModel"
             xmlns:ui="using:FluentAvalonia.UI.Controls"
             xmlns:ic="using:FluentAvalonia.FluentIcons">
    <ui:NavigationView
        Name="NavView"
        IsSettingsVisible="False"
        Loaded="NavView_OnLoaded"
        SelectionChanged="NavView_OnSelectionChanged">
        <ui:NavigationView.MenuItems>
            <ui:NavigationViewItem Tag="OpenFile" IconSource="{ic:FluentIconSource FolderOpen24Regular}" Content="打开文件" />
            <ui:NavigationViewItem Tag="Editor" IconSource="{ic:FluentIconSource Translate24Regular}" Content="翻译" />
            <ui:NavigationViewItem Tag="ExportFile" IconSource="{ic:FluentIconSource Save24Regular}" Content="导出文件" />
        </ui:NavigationView.MenuItems>
    </ui:NavigationView>
</UserControl>
