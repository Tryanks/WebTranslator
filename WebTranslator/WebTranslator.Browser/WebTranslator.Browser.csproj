<Project Sdk="Microsoft.NET.Sdk.WebAssembly">
    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net8.0-browser</TargetFramework>
        <TrimMode>partial</TrimMode>
    </PropertyGroup>

    <ItemGroup>
        <ProjectReference Include="..\WebTranslator\WebTranslator.csproj"/>
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Avalonia.Browser" Version="11.1.0-beta2"/>
    </ItemGroup>

    <Target Name="AddNoJekyllFile" AfterTargets="Publish">
        <ItemGroup>
            <NoJekyllFile Include="$(PublishDir)/wwwroot/.nojekyll"/>
        </ItemGroup>
        <WriteLinesToFile
                File="@(NoJekyllFile)"
                Lines=""
                Overwrite="true"
                Encoding="UTF-8"/>
    </Target>
</Project>
